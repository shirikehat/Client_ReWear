<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Client_ReWear.Views.Profile"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Client_ReWear.Models"
    xmlns:viewmodel="clr-namespace:Client_ReWear.ViewModels"
    Title="Profile"
    x:DataType="viewmodel:ProfileViewModel">
    <ScrollView>

        <VerticalStackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Frame
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5"
                    BorderColor="Black"
                    CornerRadius="70"
                    HeightRequest="100"
                    HorizontalOptions="Start"
                    WidthRequest="100">
                    <Image Source="{Binding PhotoURL}" WidthRequest="200" />
                </Frame>
                <Label
                    Grid.Column="1"
                    FontFamily="SA"
                    FontSize="50"
                    HorizontalOptions="Start"
                    Text="{Binding Name}" />
            </Grid>

            <StackLayout Margin="0,40,0,0" HorizontalOptions="Center">

                <Label
                    FontAttributes="Bold"
                    FontFamily="SA"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Text="edit profile"
                    TextColor="Blue">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding EditCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

            <CollectionView
                ItemsLayout="VerticalGrid, 3"
                ItemsSource="{Binding Products}"
                SelectedItem="{Binding SelectedProduct}"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Product">
                        <Image
                            Aspect="AspectFill"
                            HeightRequest="200"
                            Source="{Binding FullImagePath}"
                            WidthRequest="200" />

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>

    </ScrollView>
</ContentPage>